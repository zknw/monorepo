# Run the container with `docker run -p 3000:3000 -t zknw`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system zknw && \
          adduser --system -G zknw zknw

COPY dist/apps/zknw zknw
RUN chown -R zknw:zknw .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix zknw --omit=dev -f install

CMD [ "node", "zknw" ]
